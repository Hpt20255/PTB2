# GPTB2 Frontend Production Environment Variables
# This file is used for production build and deployment

# API Configuration (Production)
REACT_APP_API_URL=https://api.yourdomain.com
REACT_APP_API_TIMEOUT=15000

# Production Configuration
REACT_APP_DEBUG=false
REACT_APP_ENV=production
PORT=80
HOST=0.0.0.0

# Feature Flags (Production)
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_ERROR_REPORTING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# UI Configuration
REACT_APP_THEME=default
REACT_APP_LANGUAGE=vi
REACT_APP_TIMEZONE=Asia/Ho_Chi_Minh

# Build Configuration (Production)
GENERATE_SOURCEMAP=false
REACT_APP_BUILD_VERSION=1.0.0
REACT_APP_BUILD_DATE=2024-07-22

# Production Server Configuration
FAST_REFRESH=false
ESLINT_NO_DEV_ERRORS=false
DISABLE_ESLINT_PLUGIN=true

# Browser Configuration
BROWSER=none
OPEN_BROWSER=false

# Advanced Configuration (Production Optimized)
REACT_APP_EQUATION_HISTORY_LIMIT=100
REACT_APP_AUTO_SAVE_INTERVAL=60000
REACT_APP_NOTIFICATION_TIMEOUT=3000

# Analytics Configuration
REACT_APP_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
REACT_APP_HOTJAR_ID=HOTJAR_SITE_ID

# Error Reporting Configuration
REACT_APP_SENTRY_DSN=YOUR_SENTRY_DSN_HERE

# CDN Configuration
REACT_APP_CDN_URL=https://cdn.yourdomain.com
REACT_APP_STATIC_URL=https://static.yourdomain.com